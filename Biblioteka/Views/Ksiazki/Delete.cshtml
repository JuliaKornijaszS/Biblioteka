@model Biblioteka.Models.Entities.Ksiazka

@{
    ViewData["Title"] = "Delete";
}

<h1>Kasuj</h1>

<div>
    <h4>Książka</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Tytuł
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Tytul)
        </dd>
        <dt class = "col-sm-2">
            Rok wydania
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.RokWydania)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Autor)
        </dt>
        <dd class = "col-sm-10">
            @Model.Autor.ImieNazwisko
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Kategoria)
        </dt>
        <dd class = "col-sm-10">
            @Model.Kategoria.Nazwa
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Kasuj" class="btn btn-danger" /> |
        <a asp-action="Index">Powrót</a>
    </form>
</div>
