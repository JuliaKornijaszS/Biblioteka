@model Biblioteka.Models.Entities.Wypozyczenie

@{
    ViewData["Title"] = "Delete";
}

<h1>Kasuj</h1>

<div>
    <h4>Wypożyczenie</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Data wypożyczenia
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DataWypozyczenia)
        </dd>
        <dt class = "col-sm-2">
            Data zwrotu
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DataZwrotu)
        </dd>
        <dt class = "col-sm-2">
            Książka
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Ksiazka.Id)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Kasuj" class="btn btn-danger" /> |
        <a asp-action="Index">Powrót</a>
    </form>
</div>
