    ViewData["Title"] = "Delete";
}

<h1>Kasuj</h1>

<h3>Na pewno?</h3>
<div>
    <h4>Autor</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Imię i nazwisko
        </dt>
