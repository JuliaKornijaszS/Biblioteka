@model Biblioteka.Models.Entities.Autor

@{
    ViewData["Title"] = "Create";
}

<h1>Dodaj</h1>

<h4>Autor</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label">Podaj imię i nazwisko autora:</label>
                <input asp-for="ImieNazwisko" class="form-control" />
                <span asp-validation-for="ImieNazwisko" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Dodaj" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Powrót</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
